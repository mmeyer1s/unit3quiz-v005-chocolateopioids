rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to votes
    match /votes/{document=**} {
      allow read: if true;
      allow write: if true; // In production, add proper validation
    }
    
    // Allow trivia leaderboard access
    match /triviaLeaderboard/{document=**} {
      allow read: if true;
      allow create: if true;
    }
  }
}

